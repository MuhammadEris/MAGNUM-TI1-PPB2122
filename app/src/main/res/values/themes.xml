<resources>
    <!-- Base application theme. -->
    <style name="Theme.Plant" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_dark_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonLoginWithGoogle" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/ic_google</item>
        <item name="iconSize">20dp</item>
        <item name="iconTint">@null</item>
        <item name="cornerRadius">4dp</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">#ABB4BD</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="textAllCaps">false</item>
        <item name="rippleColor">#33AAAAAA</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomButtonEnable" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="cornerRadius">4dp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="backgroundTint">@color/primary_color</item>
        <item name="textAllCaps">false</item>
        <item name="rippleColor">@color/buttonRippleColor</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomToolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/white</item>
        <item name="navigationIcon">@drawable/ic_arrow</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="SearchView" parent="">
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WhiteBackgroundProgress">
        <item name="android:background">@color/white_background_progress</item>
    </style>

    <style name="TransparentBackgroundProgress">
        <item name="android:background">@color/transparent_background_progress</item>
    </style>

    <style name="Theme.Plant.SmsReceiver" parent="Theme.MaterialComponents.Light.Dialog" />
</resources>